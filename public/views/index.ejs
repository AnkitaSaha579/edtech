<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scholarly</title>
    <link rel="stylesheet" href="../styles/index.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <!-- <script src="./utils/common.js"></script> -->
    <!-- Loader -->
    <div id="loader"></div>

    <div class="container" style="display:none;">
        <div class="row">
            <div id="nav-bar-container">
                <%- include('./components/nav-bar') %>
            </div>
            <div class="content">
                <h1>join us</h1>
                <p class="small-paragraph">Welcome to Scholarly</p>
                
                <a href="#">explore here</a>

                <!-- New Card -->
                <div class="card">
                    <h2>Special Announcement</h2>
                    <p>Enroll now and get a 20% discount on your first course!</p>
                    <a href="#" class="btn">Learn More</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer Section -->
    <footer>
        <div class="footer-container">
            <div class="footer-row">
                <div class="footer-column">
                    <h2>Contact Us</h2>
                    <p>Email: contact@scholarly.com</p>
                    <p>Phone: +123 456 7890</p>
                    <p>Address: 1234 Academic Lane, City, Country</p>
                </div>
                <div class="footer-column">
                    <h2>Follow Us</h2>
                    <ul class="social-links">
                        <li><a href="https://www.facebook.com" target="_blank" rel="noopener noreferrer">
                            <i class="fab fa-facebook-f"></i> Facebook</a></li>
                        <li><a href="https://www.twitter.com" target="_blank" rel="noopener noreferrer">
                            <i class="fab fa-twitter"></i> Twitter</a></li>
                        <li><a href="https://www.instagram.com" target="_blank" rel="noopener noreferrer">
                            <i class="fab fa-instagram"></i> Instagram</a></li>
                        <li><a href="https://www.linkedin.com" target="_blank" rel="noopener noreferrer">
                            <i class="fab fa-linkedin-in"></i> LinkedIn</a></li>
                    </ul>
                </div>
            </div>
            <div class="footer-row">
                <p>&copy; 2024 Scholarly. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script>
        window.addEventListener('load', function() {
            document.getElementById('loader').style.display = 'none';
            document.querySelector('.container').style.display = 'block';
            document.querySelector('.content').classList.add('visible');
        });
    </script>
</body>
</html>
